{{!< default}}

{{#tag}}
<div class="general-header">
	<h1>{{name}}</h1>
	<p>{{description}}</p>
</div>

<main class="fixed-width-main-content" role="main">

    <section class="header-section">
        <h2>All {{name}} Articles</h2>
        <div class="even-grid">
            {{#get "posts" filter="tag:{{slug}}"}}
            {{#foreach posts}}
            <article class="article-preview">
                <a href="{{url}}">
                    <img src="{{feature_image}}" alt="">
                    <p>{{title}}</p>
                </a>
            </article>
            {{/foreach}}
            {{/get}}
        </div>
    </section>

</main>
{{/tag}}