{{!< default}}
<div class="general-header">
	<h1>Courses</h1>
	<p>Courses I have published</p>
</div>

<main class="fixed-width-main-content" role="main">

    {{#get "posts" filter="primary_tag:courses"}}
    {{#foreach posts}}
    <section class="course">
        <a href="{{url}}">
            <h2>{{title}}</h2>
        </a>
        <div class="course-display">
            <a href="{{url}}">
                <img src="{{feature_image}}" alt="">
            </a>
            <div class="course-metadata">
                <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">
                    {{date format="MMMM YYYY"}}
                </time>
                <p>{{excerpt}}</p>
            </div>
            
        </div>
    </section>
    {{/foreach}}
    {{/get}}
</main>