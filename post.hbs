{{!< default}}

{{#post}}

<header id="article-header">
	<nav class="context-static"><a href="/">Return Home</a></nav>
    <nav class="context-scrolling"><a href="/">â—„</a></nav>
	<h1 class="post-title">{{{title}}}</h1>
	<span class="post-meta"><time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time> | {{reading_time minute=(t "1 min read") minutes=(t "% min read")}}</span>
</header>

<main id="article-content" class="content" role="main">
	<article class="{{post_class}}">
		<div class="inner">
			<section class="post-content">
				{{content}}
			</section>
		</div>
	</article>
</main>

{{/post}}
