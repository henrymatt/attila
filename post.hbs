{{!< default}}

{{#post}}
<div class="post-feature-wrapper">
    <img class="post-feature" src="{{feature_image}}">
</div>
<main class="article-main">
    <h1>{{title}}</h1>
    <div class="article-grid">
        <div class="date">
            <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">
                {{date format="MMM D, YYYY"}}
            </time>
        </div>
        <div class="excerpt">
            <p>{{excerpt}}</p>
        </div>
        <div class="content">{{content}}</div>
    </div>
</main>
{{/post}}
